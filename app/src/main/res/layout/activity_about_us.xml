<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.davidleen29.tehui.acts.AboutUsActivity">
    <com.davidleen29.tehui.widget.HeaderView android:background="#ccc" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:exampleDimension="24sp" app:exampleColor="#33b5e5"
        app:headTitle="关于我们"
        android:id="@+id/header"

        />



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/logo"

        android:layout_marginTop="60dp"
        android:src="@mipmap/icon_logo_about_us"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textColor="@color/text_gray"
        android:text="版本号:1.0"
        />




    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/bg_white"
        android:padding="15dp"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/text_color_normal"
            android:textSize="@dimen/text_size_normal"
            android:layout_height="wrap_content"
            android:text="邮箱"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_normal"
            android:text="xxxx@sina.com"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/bg_white"
        android:padding="15dp"
        android:layout_marginTop="1dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/text_color_normal"
            android:textSize="@dimen/text_size_normal"
            android:layout_height="wrap_content"
            android:text="公司名称"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_normal"
            android:text=" "
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/bg_white"
        android:padding="15dp"
        android:layout_marginTop="1dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/text_color_normal"
            android:textSize="@dimen/text_size_normal"
            android:layout_height="wrap_content"
            android:text="联系电话"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_normal"
            android:text="020-87070076"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        ></View>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/text_gray"
        android:text="深圳xx版权所有"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/text_gray"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:text="Copyright @1996-2015 xxx Corporation,All Rights Reserved"
        />


</LinearLayout>
