<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.davidleen29.tehui.acts.SettingActivity">

    <com.davidleen29.tehui.widget.HeaderView android:background="#ccc" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:exampleDimension="24sp" app:exampleColor="#33b5e5" app:headTitle="设置"

        android:id="@+id/header" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/comment"
            android:background="@drawable/list_item_bg_selector"

            android:text="我要吐槽"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/text_color_normal"
            android:padding="15dp"
            android:drawableRight="@drawable/icon_arrow_right"

            />

    <TextView
        android:layout_width="match_parent"

        android:background="@drawable/list_item_bg_selector"
        android:id="@+id/aboutUs"
        android:layout_marginTop="1dp"
        android:layout_height="wrap_content"

        android:text="关于我们"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/text_color_normal"
        android:padding="15dp"
        android:drawableRight="@drawable/icon_arrow_right"

        />

    <TextView
        android:background="@drawable/list_item_bg_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/logout"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/text_color_normal"
        android:text="退出登录"
        />

</LinearLayout>
