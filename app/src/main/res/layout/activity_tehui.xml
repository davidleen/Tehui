<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.davidleen29.tehui.acts.TehuiActivity">
    <com.davidleen29.tehui.widget.HeaderView android:background="#ccc" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:exampleDimension="24sp" app:exampleColor="#33b5e5" app:headTitle="优惠详情"
        android:id="@+id/header"

        />

    <RelativeLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"

        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_photo_small"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/iv_bank" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/text_color_normal"
            android:text="招商银行"
            android:singleLine="true"
            android:id="@+id/txt_bank"
            android:layout_alignTop="@+id/iv_bank"
            android:layout_toRightOf="@+id/iv_bank"
            android:layout_toEndOf="@+id/iv_bank" />
        <TextView
            android:id="@+id/txt_coupon_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/text_color_normal"
            android:text="买一送一"
            android:layout_alignLeft="@+id/txt_bank"
            android:layout_below="@+id/txt_bank"
            android:layout_marginTop="5dp"
            />


        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/icon_divider"
            android:layout_below="@+id/txt_coupon_name"
            />
        <TextView
            android:id="@+id/invite"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/text_color_invite_selector"
            android:text="朋友圈约起"

            android:gravity="center"
            android:padding="10dp"
            android:layout_below="@+id/divider"

            />

    </RelativeLayout>
</LinearLayout>
