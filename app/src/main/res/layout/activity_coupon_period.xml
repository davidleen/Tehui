<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.davidleen29.tehui.acts.CouponPeriodActivity">
    <com.davidleen29.tehui.widget.HeaderView android:background="#ccc" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:exampleDimension="24sp" app:exampleColor="#33b5e5"
        app:headTitle="周期选择"
        android:id="@+id/header"
        />

    <TextView
        android:background="@drawable/list_item_bg_selector"
        android:id="@+id/week"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:drawableRight="@drawable/icon_select_selector"
        android:layout_marginTop="20dp"
        android:text="每周"

        />

    <TextView

        android:background="@drawable/list_item_bg_selector"
        android:id="@+id/month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="1dp"
        android:drawableRight="@drawable/icon_select_selector"
        android:text="每月"
        />





</LinearLayout>
