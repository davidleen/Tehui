<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.davidleen29.tehui.acts.PersonalActivity">


    <com.davidleen29.tehui.widget.HeaderView android:background="#ccc" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:exampleDimension="24sp" app:exampleColor="#33b5e5" app:headTitle="个人信息" app:rightText="保存"
        android:id="@id/header"
        />


        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:padding="10dp"


            android:id="@+id/ll_photo"
            android:clickable="true"
            android:background="@drawable/list_item_bg_selector"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_color_normal"
                android:layout_height="wrap_content"
                android:text="头像"/>




            <de.hdodenhof.circleimageview.CircleImageView

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/icon_photo_small"
                app:border_width="1dp"
                android:id="@+id/photo"

                app:border_color="@color/bg_white"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="center"
                android:src="@drawable/icon_arrow_right"
                />

        </LinearLayout>

    <LinearLayout


        android:id="@+id/ll_name"
        android:clickable="true"
        android:background="@drawable/list_item_bg_selector"
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="10dp"
      android:layout_marginTop="1dp"

        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/text_color_normal"
            android:layout_height="wrap_content"
            android:text="昵称"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/text_color_gray"
            android:text="隔壁老王"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="center"
            android:src="@drawable/icon_arrow_right"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="10dp"
        android:id="@+id/ll_sex"
        android:clickable="true"
        android:background="@drawable/list_item_bg_selector"
        android:layout_marginTop="1dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/text_color_normal"
            android:layout_height="wrap_content"
            android:text="性别"/>

        <TextView
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/text_color_gray"
            android:text="女"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="center"
            android:src="@drawable/icon_arrow_right"
            />

    </LinearLayout>


</LinearLayout>
