<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.davidleen29.tehui.acts.AddCouponActivity">

    <com.davidleen29.tehui.widget.HeaderView android:background="#ccc" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:exampleDimension="24sp" app:exampleColor="#33b5e5"
        app:headTitle="添加优惠券"
        app:rightText="完成"
        android:id="@+id/header"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
    <EditText
        android:layout_width="match_parent"
        android:padding="15dp"
        android:hint="请输入名称"
        android:id="@+id/name"
        android:textColorHint="@color/text_color_hint"
        android:background="@drawable/bg_input_selector"
        android:layout_height="wrap_content"
        />

        <ImageView
            android:id="@+id/delete"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:scaleType="centerInside"
            android:focusable="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/icon_delete_presser"
            />



    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_date"
        android:clickable="true"
        android:background="@drawable/list_item_bg_selector"
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="15dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/text_color_normal"
            android:layout_height="wrap_content"
            android:text="截止日期"/>

        <TextView
            android:id="@+id/endDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/text_color_gray"
            android:layout_marginRight="10dp"
            android:text="2015.8.15"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/icon_arrow_right"

            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_period"
        android:clickable="true"
        android:background="@drawable/list_item_bg_selector"
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="15dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/text_color_normal"
            android:layout_height="wrap_content"
            android:text="生效周期"/>

        <TextView
            android:id="@+id/period"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_normal"
            android:layout_marginLeft="20dp"
            android:singleLine="true"
            android:gravity="center|right"
            android:textColor="@color/text_color_gray"

            android:text=""
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/icon_arrow_right"

            />

    </LinearLayout>


</LinearLayout>
