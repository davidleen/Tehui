<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.davidleen29.tehui.acts.SetBankActivity">
    <com.davidleen29.tehui.widget.HeaderView android:background="#ccc" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:exampleDimension="24sp" app:exampleColor="#33b5e5" app:headTitle="关注的优惠类型"
        android:id="@+id/header" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/text_gray"
        android:text="您已经关注的优惠类型"
        android:padding="5dp"
        android:background="#efeff4"
        android:layout_marginLeft="10dp"
        />
    <GridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/concern"
        android:numColumns="3"
        android:background="@color/bg_white"
        android:listSelector="@null"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/text_gray"
        android:text="您未关注的优惠类型"
        android:padding="5dp"
        android:background="#efeff4"
        android:layout_marginLeft="10dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/icon_divider"></View>
    <GridView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/unConcern"
        android:layout_weight="1"
        android:numColumns="3"
        android:listSelector="@null"

        />

</LinearLayout>
