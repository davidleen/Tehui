<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"   android:layout_height="wrap_content"
    >



    <LinearLayout
        android:id="@+id/ll_item_header"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="#efeff4"
        android:layout_height="wrap_content">



        <ImageView
            android:id="@+id/item_header_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_circle_check_selector"
            android:layout_marginRight="5dp"
            />
        <TextView
            android:id="@+id/item_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="@color/text_color_gray"

            android:textSize="@dimen/text_size_normal"


            android:text="已使用"
            />

    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:background="@drawable/list_item_bg_selector"
    android:padding="10dp"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_circle_check_selector"
        android:layout_marginRight="10dp"
        />
<RelativeLayout
android:layout_width="0dp"
    android:layout_weight="1"

    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/txt_coupon_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textSize="@dimen/text_size_large"
        android:textColor="@color/text_color_normal"
        android:text="小杯升大杯"



        />


    <TextView
        android:id="@+id/shopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignLeft="@+id/txt_coupon_name"
        android:layout_below="@+id/txt_coupon_name"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/text_color_normal"
        android:text="麦当劳"
        android:drawablePadding="10dp"
        android:gravity="left|center"
        android:drawableLeft="@mipmap/icon_shop"
        />



    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/shopName"
        android:layout_alignBaseline="@+id/shopName"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/text_color_time_valid_selector"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@mipmap/icon_clock"
        android:drawablePadding="5dp"
        android:text="3天到期"
        />

    <ImageView
        android:id="@+id/qr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@mipmap/icon_qr"
        />



</RelativeLayout>


</LinearLayout>

</LinearLayout>